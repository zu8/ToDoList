<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btnStatusDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-12dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemGuidelineHDone"
        app:srcCompat="@drawable/ic_check" />

<TextView
    android:id="@+id/titleListDoneTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="28dp"
    android:textColor="#FF666666"
    android:textSize="24sp"
    tools:text="someTitle"
    app:layout_constraintBottom_toTopOf="@+id/itemGuidelineHDone"
    app:layout_constraintStart_toEndOf="@+id/btnStatusDone" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/itemGuidelineHDone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="48dp" />

<TextView
    android:id="@+id/describeDoneTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="someText"
    app:layout_constraintStart_toStartOf="@+id/titleListDoneTv"
    app:layout_constraintTop_toTopOf="@+id/itemGuidelineHDone" />

<View
    android:id="@+id/dividerDone"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintTop_toBottomOf="@+id/describeDoneTv"
    android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>